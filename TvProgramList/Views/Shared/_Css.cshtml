<link rel="stylesheet" type="text/css" href="/Content/material-dashboard/assets/slick/slick.css">
<link rel="stylesheet" type="text/css" href="/Content/material-dashboard/assets/slick/slick-theme.css">

<style type="text/css">
	.main-panel {
		width: 100%;
	}

	.top-panel {
		width: 100%;
		height: 50px;
		background-color: white;
	}

	.badge {
		background: #00c292;
		color: white;
		padding: 10px;
		margin: 5px;
		text-transform: uppercase;
		font-weight: normal;
		display: inline-block;
		font-size: 75%;
		line-height: 1;
		text-align: center;
		white-space: nowrap;
		vertical-align: baseline;
		border-radius: .25rem;
	}

	.main-panel > .content {
		margin-top: 0px;
	}

	* {
		box-sizing: border-box;
	}

	.slider {
		width: 100%;
	}

	.slick-slide {
		margin: 0px 0px;
		font-size: 75%;
		white-space: nowrap;
		text-align: center;
	}

	.slick-prev:before,
	.slick-next:before {
		color: black;
	}

	.slick-slide {
		transition: all ease-in-out .3s;
		opacity: .2;
	}

	.slick-active {
		opacity: .5;
	}

	.slick-current {
		opacity: 1;
	}

	.selected-chn {
		border-bottom: 3px solid #00c292;
	}

	.chn-1st-active {
		border-bottom: solid 2px #61bffe;
	}

	#slickMenu a:link { text-decoration:none; color:#646464; }
	#slickMenu a:visited { text-decoration:none; color:#646464; }
	#slickMenu a:active { text-decoration:none; color:#646464; }
	#slickMenu a:hover { text-decoration:none; color:#646464; }

	#programmList { font-size: 9pt }
</style>